              <div class="topic">
                <i class="fas fa-calculator"></i>
                <span>Basic Algebra</span>
              </div>
              <div class="topic">
                <i class="fas fa-shapes"></i>
                <span>Geometry</span>
              </div>
              <div class="topic">
                <i class="fas fa-fraction"></i>
                <span>Fractions & Decimals</span>
              </div>
              <div class="topic">
                <i class="fas fa-chart-bar"></i>
                <span>Basic Statistics</span>
              </div>
            </div>

            <div class="difficulty-level">
              <span class="level-label">Difficulty:</span>
