              <div class="topic">
                <i class="fas fa-square-root-alt"></i>
                <span>Advanced Algebra</span>
              </div>
              <div class="topic">
                <i class="fas fa-triangle"></i>
                <span>Trigonometry</span>
              </div>
              <div class="topic">
                <i class="fas fa-project-diagram"></i>
                <span>Quadratic Functions</span>
              </div>
              <div class="topic">
                <i class="fas fa-chart-line"></i>
                <span>Data Analysis</span>
              </div>
            </div>

            <div class="difficulty-level">
              <span class="level-label">Difficulty:</span>
              <div class="level-indicator">
                <div class="level-dot active"></div>
                <div class="level-dot active"></div>
                <div class="level-dot"></div>
              </div>
              <span class="level-text">Intermediate</span>
            </div>

            <button class="select-btn featured" data-year="Year 9">
              <span>Start Year 9</span>
              <i class="fas fa-arrow-right"></i>
