<%- include('partials/header', { title: 'Year Selection', student: student }) %>

<div class="year-selection-container">
  <!-- Hero Section -->
  <section class="selection-hero" data-aos="fade-down">
    <div class="container">
      <div class="hero-content">
        <h1 class="hero-title">
          Choose Your <span class="highlight">Mathematical Journey</span>
