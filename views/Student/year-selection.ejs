<!-- Year Selection Specific CSS -->
<style>
  /* Year Selection Styles */
  .year-selection-container {
    padding-top: 20px;
  }

  .selection-hero {
    padding: 60px 0;
    text-align: center;
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
    border-radius: 20px;
    margin: 0 20px 60px;
  }

  .hero-title {
    font-size: 3rem;
    font-weight: 800;
    color: var(--bs-body-color);
    margin-bottom: 20px;
    line-height: 1.2;
  }

  .highlight {
    background: var(--primary-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-subtitle {
    font-size: 1.2rem;
    color: var(--bs-body-color);
    opacity: 0.8;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .year-cards-section {
    padding: 0 0 60px;
  }

  .year-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 30px;
    max-width: 1200px;
    margin: 0 auto;
  }

  .year-selection-card {
    position: relative;
    background: var(--glass-bg);
    backdrop-filter: blur(20px);
    border: 1px solid var(--glass-border);
    border-radius: 24px;
    overflow: hidden;
    transition: all 0.4s ease;
    cursor: pointer;
    box-shadow: var(--glass-shadow);
  }

  .year-selection-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 25px 70px rgba(102, 126, 234, 0.3);
    border-color: var(--student-primary);
  }

  .year-selection-card.featured {
    border-color: var(--student-accent);
    background: linear-gradient(135deg, rgba(240, 147, 251, 0.1) 0%, rgba(245, 87, 108, 0.1) 100%);
  }

  .year-selection-card.featured:hover {
    box-shadow: 0 25px 70px rgba(240, 147, 251, 0.4);
  }

  .featured-badge {
    position: absolute;
    top: 20px;
    right: 20px;
    background: var(--secondary-gradient);
    color: white;
    padding: 8px 16px;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 6px;
    z-index: 10;
  }

  .card-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(circle at top right, rgba(102, 126, 234, 0.1) 0%, transparent 50%);
    pointer-events: none;
  }

  .card-content {
    position: relative;
    padding: 40px 30px;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .year-number {
    font-size: 4rem;
    font-weight: 900;
    background: var(--primary-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    line-height: 1;
    margin-bottom: 10px;
  }

  .year-selection-card.featured .year-number {
    background: var(--secondary-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .year-title {
    font-size: 1.8rem;
    font-weight: 700;
    color: var(--bs-body-color);
    margin-bottom: 16px;
  }

  .year-description {
    color: var(--bs-body-color);
    opacity: 0.8;
    line-height: 1.6;
    margin-bottom: 24px;
    flex-grow: 1;
  }

  .curriculum-topics {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 12px;
    margin-bottom: 24px;
  }

  .topic {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 0.9rem;
    color: var(--bs-body-color);
    opacity: 0.9;
  }

  .topic i {
    color: var(--student-primary);
    width: 16px;
  }

  .year-selection-card.featured .topic i {
    color: var(--student-accent);
  }

  .difficulty-level {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 24px;
    font-size: 0.9rem;
    color: var(--bs-body-color);
  }

  .level-indicator {
    display: flex;
    gap: 4px;
  }

  .level-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: rgba(107, 114, 128, 0.3);
  }

  .level-dot.active {
    background: var(--student-primary);
  }

  .year-selection-card.featured .level-dot.active {
    background: var(--student-accent);
  }

  .select-btn {
    width: 100%;
    background: var(--primary-gradient);
    border: none;
    border-radius: 14px;
    padding: 16px 24px;
    color: white;
    font-weight: 600;
    font-size: 1rem;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
  }

  .select-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(102, 126, 234, 0.4);
  }

  .select-btn.featured {
    background: var(--secondary-gradient);
  }

  .select-btn.featured:hover {
    box-shadow: 0 10px 30px rgba(240, 147, 251, 0.4);
  }

  .info-section {
    padding: 60px 0;
    background: var(--glass-bg);
    backdrop-filter: blur(20px);
    border-radius: 20px;
    margin: 0 20px;
  }

  .info-title {
    font-size: 2rem;
    font-weight: 700;
    color: var(--bs-body-color);
    margin-bottom: 16px;
  }

  .info-description {
    font-size: 1.1rem;
    color: var(--bs-body-color);
    opacity: 0.8;
    line-height: 1.6;
    margin-bottom: 24px;
  }

  .info-features {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .feature {
    display: flex;
    align-items: center;
    gap: 12px;
    color: var(--bs-body-color);
  }

  .feature i {
    color: #22c55e;
    font-size: 1.1rem;
  }

  .info-visual {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 400px;
    position: relative;
  }

  .floating-elements {
    position: relative;
    width: 300px;
    height: 300px;
  }

  .math-symbol {
    position: absolute;
    font-size: 3rem;
    font-weight: 700;
    background: var(--primary-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: float 4s ease-in-out infinite;
    animation-delay: var(--delay);
  }

  .math-symbol:nth-child(1) {
    top: 20%;
    left: 20%;
  }

  .math-symbol:nth-child(2) {
    top: 10%;
    right: 20%;
  }

  .math-symbol:nth-child(3) {
    bottom: 30%;
    left: 10%;
  }

  .math-symbol:nth-child(4) {
    bottom: 20%;
    right: 10%;
  }

  .math-symbol:nth-child(5) {
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  @keyframes float {

    0%,
    100% {
      transform: translateY(0px) rotate(0deg);
    }

    50% {
      transform: translateY(-20px) rotate(5deg);
    }
  }

  /* Responsive */
  @media (max-width: 768px) {
    .hero-title {
      font-size: 2.2rem;
    }

    .year-grid {
      grid-template-columns: 1fr;
      gap: 20px;
    }

    .curriculum-topics {
      grid-template-columns: 1fr;
    }

    .selection-hero,
    .info-section {
      margin: 0 10px;
    }
  }
</style>

<!-- Year Selection JavaScript -->
<script>
  document.addEventListener('DOMContentLoaded', function() {
    const selectButtons = document.querySelectorAll('.select-btn');

    selectButtons.forEach(button => {
      button.addEventListener('click', function() {
        const year = this.dataset.year;

        if (window.studentNotifications) {
          window.studentNotifications.show(`${year} selected! Redirecting to dashboard...`, 'success');
        }

        setTimeout(() => {
          window.location.href = '/student/dashboard';
        }, 1500);
      });
    });

    // Add hover effects to cards
    const cards = document.querySelectorAll('.year-selection-card');
    cards.forEach(card => {
      card.addEventListener('mouseenter', function() {
        const number = this.querySelector('.year-number');
        if (number) {
          number.style.transform = 'scale(1.1)';
        }
      });

      card.addEventListener('mouseleave', function() {
        const number = this.querySelector('.year-number');
        if (number) {
          number.style.transform = 'scale(1)';
        }
      });
    });
  });
</script>

