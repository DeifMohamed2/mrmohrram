<%- include('partials/header', { title: 'Notes Management' }) %>

<!-- Admin Layout -->
<div class="admin-layout">
    <%- include('partials/sidebar') %>
    
    <!-- Main Content -->
    <main class="admin-main-content">
        <%- include('partials/header-bar', { title: 'Notes Management' }) %>
        
        <!-- Content Area -->
        <div class="admin-content">
            <!-- Page Header -->
            <div class="row mb-4">
                <div class="col-12">
                    <div class="admin-card" data-aos="fade-up">
                        <div class="admin-card-header">
                            <div>
                                <h2 class="admin-card-title">Notes Management</h2>
                                <p class="text-muted mb-0">Upload, organize, and manage educational notes and materials for all weeks.</p>
                            </div>
                            <div class="admin-table-actions">
                                <button class="admin-btn admin-btn-primary admin-btn-sm" onclick="openUploadModal()">
                                    <i class="fas fa-upload me-2"></i>
                                    Upload Notes
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Statistics Cards -->
            <div class="admin-stats-grid mb-4" data-aos="fade-up" data-aos-delay="100">
                <div class="admin-stat-card">
                    <div class="admin-stat-header">
                        <div class="admin-stat-icon primary">
                            <i class="fas fa-file-alt"></i>
                        </div>
                        <div class="admin-stat-trend up">
                            <i class="fas fa-arrow-up"></i>
                            <span>+3%</span>
                        </div>
                    </div>
                    <div class="admin-stat-value" id="totalNotes">0</div>
                    <div class="admin-stat-label">Total Notes</div>
                </div>

                <div class="admin-stat-card">
                    <div class="admin-stat-header">
                        <div class="admin-stat-icon success">
                            <i class="fas fa-download"></i>
                        </div>
                        <div class="admin-stat-trend up">
                            <i class="fas fa-arrow-up"></i>
                            <span>+12%</span>
                        </div>
                    </div>
                    <div class="admin-stat-value" id="totalDownloads">0</div>
                    <div class="admin-stat-label">Total Downloads</div>
                </div>

                <div class="admin-stat-card">
                    <div class="admin-stat-header">
                        <div class="admin-stat-icon info">
                            <i class="fas fa-calendar-week"></i>
                        </div>
                        <div class="admin-stat-trend up">
                            <i class="fas fa-arrow-up"></i>
                            <span>+5%</span>
                        </div>
                    </div>
                    <div class="admin-stat-value" id="weeksWithNotes">0</div>
                    <div class="admin-stat-label">Weeks with Notes</div>
                </div>

                <div class="admin-stat-card">
                    <div class="admin-stat-header">
                        <div class="admin-stat-icon warning">
                            <i class="fas fa-exclamation-triangle"></i>
                        </div>
                        <div class="admin-stat-trend down">
                            <i class="fas fa-arrow-down"></i>
                            <span>-1%</span>
                        </div>
                    </div>
                    <div class="admin-stat-value" id="weeksWithoutNotes">0</div>
                    <div class="admin-stat-label">Weeks without Notes</div>
                </div>
            </div>

            <!-- Filters -->
            <div class="row mb-4">
                <div class="col-12">
                    <div class="admin-card" data-aos="fade-up" data-aos-delay="200">
                        <div class="admin-card-body">
                            <div class="row align-items-center">
                                <div class="col-md-2 mb-3">
                                    <label class="admin-form-label">Filter by Week</label>
                                    <select class="admin-form-select" id="weekFilter" onchange="filterNotes()">
                                        <option value="">All Weeks</option>
                                        <!-- Weeks will be populated dynamically -->
                                    </select>
                                </div>
                                <div class="col-md-2 mb-3">
                                    <label class="admin-form-label">Filter by Year</label>
                                    <select class="admin-form-select" id="yearFilter" onchange="filterNotes()">
                                        <option value="">All Years</option>
                                        <option value="Year 8">Year 8</option>
                                        <option value="Year 9">Year 9</option>
                                        <option value="Year 10">Year 10</option>
                                    </select>
                                </div>
                                <div class="col-md-2 mb-3">
                                    <label class="admin-form-label">Filter by Type</label>
                                    <select class="admin-form-select" id="typeFilter" onchange="filterNotes()">
                                        <option value="">All Types</option>
                                        <option value="IGCSE">IGCSE</option>
                                        <option value="AS">AS</option>
                                        <option value="A2">A2</option>
                                    </select>
                                </div>
                                <div class="col-md-2 mb-3">
                                    <label class="admin-form-label">Filter by Format</label>
                                    <select class="admin-form-select" id="formatFilter" onchange="filterNotes()">
                                        <option value="">All Formats</option>
                                        <option value="pdf">PDF</option>
                                        <option value="doc">DOC</option>
                                        <option value="docx">DOCX</option>
                                        <option value="ppt">PPT</option>
                                        <option value="pptx">PPTX</option>
                                    </select>
                                </div>
                                <div class="col-md-3 mb-3">
                                    <label class="admin-form-label">Search Notes</label>
                                    <input type="text" class="admin-form-input" id="notesSearch" placeholder="Search by title or description..." onkeyup="filterNotes()">
                                </div>
                                <div class="col-md-1 mb-3">
                                    <label class="admin-form-label">&nbsp;</label>
                                    <button class="admin-btn admin-btn-secondary admin-btn-sm w-100" onclick="refreshNotes()">
                                        <i class="fas fa-sync-alt"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Notes Grid -->
            <div class="row">
                <div class="col-12">
                    <div class="admin-card" data-aos="fade-up" data-aos-delay="300">
                        <div class="admin-card-header">
                            <h3 class="admin-card-title">Notes Library</h3>
                            <div class="admin-table-actions">
                                <div class="btn-group" role="group">
                                    <button class="admin-btn admin-btn-secondary admin-btn-sm active" onclick="toggleView('grid')" id="gridViewBtn">
                                        <i class="fas fa-th"></i>
                                    </button>
                                    <button class="admin-btn admin-btn-secondary admin-btn-sm" onclick="toggleView('list')" id="listViewBtn">
                                        <i class="fas fa-list"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="admin-card-body">
                            <!-- Grid View -->
                            <div id="notesGridView" class="row">
                                <% if (notes && notes.length > 0) { %>
                                    <% notes.forEach(note => { %>
                                        <div class="col-md-4 col-lg-3 mb-4" data-note-id="<%= note._id %>">
                                            <div class="admin-note-card">
                                                <div class="admin-note-card-header">
                                                    <div class="admin-note-icon">
                                                        <i class="fas fa-file-<%= getFileIcon(note.fileType) %>"></i>
                                                    </div>
                                                    <div class="admin-note-actions">
                                                        <div class="dropdown">
                                                            <button class="admin-btn admin-btn-sm admin-btn-secondary" type="button" data-bs-toggle="dropdown">
                                                                <i class="fas fa-ellipsis-v"></i>
                                                            </button>
                                                            <ul class="dropdown-menu">
                                                                <li><a class="dropdown-item" href="#" onclick="viewNote('<%= note._id %>')">
                                                                    <i class="fas fa-eye me-2"></i>View
                                                                </a></li>
                                                                <li><a class="dropdown-item" href="#" onclick="editNote('<%= note._id %>')">
                                                                    <i class="fas fa-edit me-2"></i>Edit
                                                                </a></li>
                                                                <li><a class="dropdown-item" href="#" onclick="downloadNote('<%= note._id %>')">
                                                                    <i class="fas fa-download me-2"></i>Download
                                                                </a></li>
                                                                <li><hr class="dropdown-divider"></li>
                                                                <li><a class="dropdown-item text-danger" href="#" onclick="deleteNote('<%= note._id %>')">
                                                                    <i class="fas fa-trash me-2"></i>Delete
                                                                </a></li>
                                                            </ul>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="admin-note-card-body">
                                                    <h6 class="admin-note-title"><%= note.title %></h6>
                                                    <p class="admin-note-description"><%= note.description || 'No description available' %></p>
                                                    <div class="admin-note-meta">
                                                        <div class="admin-note-week">
                                                            <i class="fas fa-calendar-week me-1"></i>
                                                            Week <%= note.week.weekNumber %>
                                                        </div>
                                                        <div class="admin-note-year">
                                                            <i class="fas fa-graduation-cap me-1"></i>
                                                            <%= note.week.year %>
                                                        </div>
                                                    </div>
                                                    <div class="admin-note-stats">
                                                        <div class="admin-note-stat">
                                                            <i class="fas fa-download me-1"></i>
                                                            <%= note.downloadCount || 0 %>
                                                        </div>
                                                        <div class="admin-note-stat">
                                                            <i class="fas fa-eye me-1"></i>
                                                            <%= note.viewCount || 0 %>
                                                        </div>
                                                        <div class="admin-note-stat">
                                                            <i class="fas fa-file me-1"></i>
                                                            <%= formatFileSize(note.fileSize) %>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="admin-note-card-footer">
                                                    <div class="admin-note-date">
                                                        Uploaded <%= formatDate(note.createdAt) %>
                                                    </div>
                                                    <div class="admin-note-status">
                                                        <span class="admin-status-badge <%= note.isActive ? 'completed' : 'inactive' %>">
                                                            <%= note.isActive ? 'Active' : 'Inactive' %>
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    <% }); %>
                                <% } else { %>
                                    <div class="col-12">
                                        <div class="admin-empty-state">
                                            <div class="admin-empty-icon">
                                                <i class="fas fa-file-alt"></i>
                                            </div>
                                            <div class="admin-empty-title">No Notes Found</div>
                                            <div class="admin-empty-description">Upload your first set of notes to get started.</div>
                                            <button class="admin-btn admin-btn-primary mt-3" onclick="openUploadModal()">
                                                <i class="fas fa-upload me-2"></i>
                                                Upload Notes
                                            </button>
                                        </div>
                                    </div>
                                <% } %>
                            </div>

                            <!-- List View -->
                            <div id="notesListView" class="table-responsive" style="display: none;">
                                <table class="admin-table">
                                    <thead>
                                        <tr>
                                            <th>Title</th>
                                            <th>Week</th>
                                            <th>Year & Type</th>
                                            <th>File Type</th>
                                            <th>Size</th>
                                            <th>Downloads</th>
                                            <th>Status</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if (notes && notes.length > 0) { %>
                                            <% notes.forEach(note => { %>
                                                <tr data-note-id="<%= note._id %>">
                                                    <td>
                                                        <div class="d-flex align-items-center">
                                                            <div class="admin-note-icon me-3" style="width: 30px; height: 30px; font-size: 14px;">
                                                                <i class="fas fa-file-<%= getFileIcon(note.fileType) %>"></i>
                                                            </div>
                                                            <div>
                                                                <div class="fw-semibold"><%= note.title %></div>
                                                                <small class="text-muted"><%= note.description || 'No description' %></small>
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <div class="fw-bold text-primary">Week <%= note.week.weekNumber %></div>
                                                        <small class="text-muted"><%= note.week.title %></small>
                                                    </td>
                                                    <td>
                                                        <div class="fw-semibold"><%= note.week.year %></div>
                                                        <small class="text-muted"><%= note.week.studentType %></small>
                                                    </td>
                                                    <td>
                                                        <span class="badge bg-info"><%= note.fileType.toUpperCase() %></span>
                                                    </td>
                                                    <td><%= formatFileSize(note.fileSize) %></td>
                                                    <td>
                                                        <div class="fw-bold text-success"><%= note.downloadCount || 0 %></div>
                                                    </td>
                                                    <td>
                                                        <span class="admin-status-badge <%= note.isActive ? 'completed' : 'inactive' %>">
                                                            <%= note.isActive ? 'Active' : 'Inactive' %>
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <div class="d-flex gap-2">
                                                            <button class="admin-btn admin-btn-secondary admin-btn-sm" 
                                                                    onclick="viewNote('<%= note._id %>')" 
                                                                    title="View Note">
                                                                <i class="fas fa-eye"></i>
                                                            </button>
                                                            <button class="admin-btn admin-btn-info admin-btn-sm" 
                                                                    onclick="editNote('<%= note._id %>')" 
                                                                    title="Edit Note">
                                                                <i class="fas fa-edit"></i>
                                                            </button>
                                                            <button class="admin-btn admin-btn-success admin-btn-sm" 
                                                                    onclick="downloadNote('<%= note._id %>')" 
                                                                    title="Download Note">
                                                                <i class="fas fa-download"></i>
                                                            </button>
                                                            <button class="admin-btn admin-btn-danger admin-btn-sm" 
                                                                    onclick="deleteNote('<%= note._id %>')" 
                                                                    title="Delete Note">
                                                                <i class="fas fa-trash"></i>
                                                            </button>
                                                        </div>
                                                    </td>
                                                </tr>
                                            <% }); %>
                                        <% } else { %>
                                            <tr>
                                                <td colspan="8" class="text-center py-5">
                                                    <div class="admin-empty-state">
                                                        <div class="admin-empty-icon">
                                                            <i class="fas fa-file-alt"></i>
                                                        </div>
                                                        <div class="admin-empty-title">No Notes Found</div>
                                                        <div class="admin-empty-description">Upload your first set of notes to get started.</div>
                                                    </div>
                                                </td>
                                            </tr>
                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>

<!-- Upload Notes Modal -->
<div class="admin-modal-overlay" id="uploadNotesModal">
    <div class="admin-modal" style="max-width: 800px;">
        <div class="admin-modal-header">
            <h3 class="admin-modal-title">Upload Notes</h3>
            <button class="admin-modal-close" onclick="closeUploadModal()">
                <i class="fas fa-times"></i>
            </button>
        </div>
        <div class="admin-modal-body">
            <form id="uploadNotesForm" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="admin-form-label">Select Week</label>
                        <select class="admin-form-select" name="week" required>
                            <option value="">Choose a week...</option>
                            <!-- Weeks will be populated dynamically -->
                        </select>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="admin-form-label">Note Title</label>
                        <input type="text" class="admin-form-input" name="title" placeholder="Enter note title..." required>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="admin-form-label">Description</label>
                    <textarea class="admin-form-textarea" name="description" rows="3" 
                              placeholder="Enter a description for these notes..."></textarea>
                </div>
                <div class="mb-3">
                    <label class="admin-form-label">Upload File</label>
                    <input type="file" class="admin-form-input" name="file" accept=".pdf,.doc,.docx,.ppt,.pptx" required>
                    <small class="text-muted">Supported formats: PDF, DOC, DOCX, PPT, PPTX (Max 50MB)</small>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="isActive" id="isActive" checked>
                            <label class="form-check-label" for="isActive">
                                Make notes available to students
                            </label>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="allowDownload" id="allowDownload" checked>
                            <label class="form-check-label" for="allowDownload">
                                Allow students to download
                            </label>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="admin-modal-footer">
            <button class="admin-btn admin-btn-secondary" onclick="closeUploadModal()">Cancel</button>
            <button class="admin-btn admin-btn-primary" onclick="uploadNotes()">
                <i class="fas fa-upload me-2"></i>
                Upload Notes
            </button>
        </div>
    </div>
</div>

<!-- View Note Modal -->
<div class="admin-modal-overlay" id="viewNoteModal">
    <div class="admin-modal" style="max-width: 1000px;">
        <div class="admin-modal-header">
            <h3 class="admin-modal-title">View Note</h3>
            <button class="admin-modal-close" onclick="closeViewNoteModal()">
                <i class="fas fa-times"></i>
            </button>
        </div>
        <div class="admin-modal-body" id="viewNoteContent">
            <div class="admin-loading">
                <div class="admin-spinner"></div>
                Loading note details...
            </div>
        </div>
        <div class="admin-modal-footer">
            <button class="admin-btn admin-btn-secondary" onclick="closeViewNoteModal()">Close</button>
        </div>
    </div>
</div>

<script>
// Additional JavaScript for notes page
let currentNoteId = null;

// Toggle view between grid and list
function toggleView(view) {
    const gridView = document.getElementById('notesGridView');
    const listView = document.getElementById('notesListView');
    const gridBtn = document.getElementById('gridViewBtn');
    const listBtn = document.getElementById('listViewBtn');
    
    if (view === 'grid') {
        gridView.style.display = 'block';
        listView.style.display = 'none';
        gridBtn.classList.add('active');
        listBtn.classList.remove('active');
    } else {
        gridView.style.display = 'none';
        listView.style.display = 'block';
        listBtn.classList.add('active');
        gridBtn.classList.remove('active');
    }
}

// Filter notes
function filterNotes() {
    const weekFilter = document.getElementById('weekFilter').value;
    const yearFilter = document.getElementById('yearFilter').value;
    const typeFilter = document.getElementById('typeFilter').value;
    const formatFilter = document.getElementById('formatFilter').value;
    const notesSearch = document.getElementById('notesSearch').value.toLowerCase();
    
    const gridItems = document.querySelectorAll('#notesGridView .col-md-4');
    const listRows = document.querySelectorAll('#notesListView tbody tr');
    
    // Filter grid view
    gridItems.forEach(item => {
        const title = item.querySelector('.admin-note-title').textContent.toLowerCase();
        const week = item.querySelector('.admin-note-week').textContent;
        const year = item.querySelector('.admin-note-year').textContent;
        
        const weekMatch = !weekFilter || week.includes(weekFilter);
        const yearMatch = !yearFilter || year.includes(yearFilter);
        const typeMatch = !typeFilter || year.includes(typeFilter);
        const searchMatch = !notesSearch || title.includes(notesSearch);
        
        item.style.display = (weekMatch && yearMatch && typeMatch && searchMatch) ? '' : 'none';
    });
    
    // Filter list view
    listRows.forEach(row => {
        const title = row.querySelector('td:nth-child(1)').textContent.toLowerCase();
        const week = row.querySelector('td:nth-child(2)').textContent;
        const year = row.querySelector('td:nth-child(3)').textContent;
        
        const weekMatch = !weekFilter || week.includes(weekFilter);
        const yearMatch = !yearFilter || year.includes(yearFilter);
        const typeMatch = !typeFilter || year.includes(typeFilter);
        const searchMatch = !notesSearch || title.includes(notesSearch);
        
        row.style.display = (weekMatch && yearMatch && typeMatch && searchMatch) ? '' : 'none';
    });
}

// Open upload modal
async function openUploadModal() {
    const modal = document.getElementById('uploadNotesModal');
    const weekSelect = modal.querySelector('select[name="week"]');
    
    modal.classList.add('show');
    document.body.style.overflow = 'hidden';
    
    try {
        const response = await fetch('/admin/api/weeks');
        const result = await response.json();
        
        if (result.success) {
            weekSelect.innerHTML = '<option value="">Choose a week...</option>' +
                result.weeks.map(week => 
                    `<option value="${week._id}">Week ${week.weekNumber} - ${week.title} (${week.year})</option>`
                ).join('');
        }
    } catch (error) {
        console.error('Error loading weeks:', error);
    }
}

// Close upload modal
function closeUploadModal() {
    const modal = document.getElementById('uploadNotesModal');
    modal.classList.remove('show');
    document.body.style.overflow = '';
    document.getElementById('uploadNotesForm').reset();
}

// Upload notes
async function uploadNotes() {
    const form = document.getElementById('uploadNotesForm');
    const formData = new FormData(form);
    
    try {
        const response = await fetch('/admin/api/notes/upload', {
            method: 'POST',
            body: formData
        });
        
        const result = await response.json();
        
        if (result.success) {
            showSuccess('Notes uploaded successfully!');
            closeUploadModal();
            window.location.reload();
        } else {
            showError(result.message || 'Failed to upload notes');
        }
    } catch (error) {
        showError('An error occurred while uploading notes');
    }
}

// View note
async function viewNote(noteId) {
    currentNoteId = noteId;
    const modal = document.getElementById('viewNoteModal');
    const content = document.getElementById('viewNoteContent');
    
    modal.classList.add('show');
    document.body.style.overflow = 'hidden';
    
    try {
        const response = await fetch(`/admin/api/notes/${noteId}`);
        const result = await response.json();
        
        if (result.success) {
            content.innerHTML = generateNoteViewHTML(result.note);
        } else {
            content.innerHTML = '<div class="text-center text-danger">Error loading note details</div>';
        }
    } catch (error) {
        content.innerHTML = '<div class="text-center text-danger">Error loading note details</div>';
    }
}

// Generate note view HTML
function generateNoteViewHTML(note) {
    return `
        <div class="row">
            <div class="col-md-8">
                <div class="admin-card">
                    <div class="admin-card-header">
                        <h4>${note.title}</h4>
                        <p class="text-muted mb-0">${note.description || 'No description available'}</p>
                    </div>
                    <div class="admin-card-body">
                        <div class="text-center">
                            <div class="admin-note-icon mb-3" style="width: 80px; height: 80px; font-size: 32px; margin: 0 auto;">
                                <i class="fas fa-file-${getFileIcon(note.fileType)}"></i>
                            </div>
                            <h5>${note.fileName}</h5>
                            <p class="text-muted">${formatFileSize(note.fileSize)} • ${note.fileType.toUpperCase()}</p>
                            <div class="d-flex gap-2 justify-content-center">
                                <button class="admin-btn admin-btn-primary" onclick="downloadNote('${note._id}')">
                                    <i class="fas fa-download me-2"></i>
                                    Download
                                </button>
                                <button class="admin-btn admin-btn-info" onclick="previewNote('${note._id}')">
                                    <i class="fas fa-eye me-2"></i>
                                    Preview
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="admin-card">
                    <div class="admin-card-header">
                        <h5 class="admin-card-title">Note Information</h5>
                    </div>
                    <div class="admin-card-body">
                        <div class="mb-3">
                            <strong>Week:</strong> Week ${note.week.weekNumber}<br>
                            <strong>Title:</strong> ${note.week.title}<br>
                            <strong>Year:</strong> ${note.week.year}<br>
                            <strong>Type:</strong> ${note.week.studentType}
                        </div>
                        <hr>
                        <div class="mb-3">
                            <strong>Upload Date:</strong> ${formatDate(note.createdAt)}<br>
                            <strong>Last Modified:</strong> ${formatDate(note.updatedAt)}<br>
                            <strong>Status:</strong> <span class="admin-status-badge ${note.isActive ? 'completed' : 'inactive'}">${note.isActive ? 'Active' : 'Inactive'}</span>
                        </div>
                        <hr>
