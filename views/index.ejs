<!-- Interactive Learning Hub Section -->
<section class="learning-hub-section d-none" id="learningHub">
  <div class="section-bg-pattern"></div>
  
  <div class="container">
    <div class="section-header-new">
      <div class="section-badge">
        <i class="fas fa-brain"></i>
        <span>Interactive Learning</span>
      </div>
      <h2 class="section-title-new">Experience Math in 3D</h2>
      <p class="section-subtitle-new">
        Manipulate mathematical objects, visualize complex equations, 
        and discover patterns through interactive exploration.
      </p>
    </div>
    
    <div class="learning-hub-container">
      <div class="row align-items-center">
        <div class="col-lg-6">
          <div class="interactive-demo-panel">
            <div class="demo-controls">
              <div class="control-group">
                <label class="control-label">Choose Concept:</label>
                <div class="concept-buttons">
                  <button class="concept-btn active" data-concept="geometry">
                    <i class="fas fa-cube"></i>
                    <span>Geometry</span>
                  </button>
                  <button class="concept-btn" data-concept="calculus">
                    <i class="fas fa-chart-line"></i>
                    <span>Calculus</span>
                  </button>
                  <button class="concept-btn" data-concept="algebra">
                    <i class="fas fa-square-root-alt"></i>
                    <span>Algebra</span>
                  </button>
                </div>
              </div>
              
              <div class="parameter-controls">
                <div class="slider-control">
                  <label>Rotation Speed</label>
                  <input type="range" class="math-slider" id="rotationSpeed" min="0" max="5" value="2" step="0.1">
                  <span class="slider-value">2.0</span>
                </div>
                <div class="slider-control">
                  <label>Complexity</label>
                  <input type="range" class="math-slider" id="complexity" min="1" max="10" value="5">
                  <span class="slider-value">5</span>
                </div>
              </div>
              
              <div class="action-buttons">
                <button class="action-btn" id="resetDemo">
                  <i class="fas fa-redo"></i>
                  Reset
                </button>
                <button class="action-btn" id="randomizeDemo">
                  <i class="fas fa-random"></i>
                  Randomize
                </button>
              </div>
            </div>
          </div>
        </div>
        
        <div class="col-lg-6">
          <div class="interactive-canvas-container">
            <div class="math-visualization" id="mathVisualization">
              <div class="visualization-header">
                <h3>Interactive Math Demo</h3>
                <p>Explore mathematical concepts in real-time</p>
              </div>
              
              <div class="visualization-content">
                <div class="math-object" id="mathObject">
                  <div class="object-3d">
                    <div class="cube-face front">π</div>
                    <div class="cube-face back">∑</div>
                    <div class="cube-face right">∫</div>
                    <div class="cube-face left">√</div>
                    <div class="cube-face top">∞</div>
                    <div class="cube-face bottom">θ</div>
                  </div>
                </div>
                
              <div class="equation-display" id="currentEquation">
                  <span class="equation-label">Current Equation:</span>
                  <span class="equation-text">y = sin(x) + cos(2x)</span>
              </div>
                
              <div class="interaction-hint">
                <i class="fas fa-hand-pointer"></i>
                  <span>Use controls to manipulate the object</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

